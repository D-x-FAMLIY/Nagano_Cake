<h1>会員情報</h1>
<!--名前のデータを持ってくる-->
<h2>さんの会員情報編集</h2>

<%= form_with ,model: @customer do |f| %>
<table>

  <tr>
    <td><%= f.label :会員ID %></td>
    <td><%= f.text_field :id %></td>
  </tr>

  <tr>
    <td><%= f.label :氏名 %></td>
    <td>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </td>
  </tr>

  <tr>
    <td><%= f.label :フリガナ %></td>
    <td>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </td>
  </tr>
  <tr>
    <td><%= f.label :郵便番号 %></td>
    <td><%= f.text_field :post_code %></td>
  </tr>
  <tr>
    <td><%= f.label :住所 %></td>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <td><%= f.label :電話番号 %></td>
    <td><%= f.text_field :phone_number %></td>
  </tr>
  <tr>
    <td><%= f.label :メールアドレス %></td>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <td><%= f.label :会員ステータス %></td>
    <td>会員ステータスの記述</td>
  </tr>

</table>


<%= f.submit "変更を保存", class: 'btn btn-success' %>

<% end %>