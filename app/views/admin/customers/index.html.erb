<div class="container">
  <div class="row">
    <div class="col-md-3" style="text-align: center; margin-top: 50px;">
      <h2>会員一覧</h2>
    </div>
      <div class="col-md-6" style="text-align: center; margin-top: 50px;">
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.last_name + " " + customer.first_name, admin_customer_path(customer.id) %></td>
              <td><%= customer.email %></td>
              <% if customer.is_deleted == false %>
                <td>有効</td>
              <% else %>
                <td>退会</td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="pagination"style="justify-content: center; margin-top: 20px;">
      <!--ページネーション入れる-->
      <%= paginate @customers %>
      </div>
    </div>
  </div>
</div>