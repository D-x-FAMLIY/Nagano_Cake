<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h2>ジャンル編集</h2>
      <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch, local: true do |f| %>
        <h4>ジャンル名</h4>
        <%= f.text_area :name %>
        <%= f.submit class: 'btn btn-success btn-sm' %>
      <% end %>
    </div>
  </div>
</div>