<div class="container">
  <div class="row">
    <div class="col-md-3" style="margin-top: 30px;">
      <!-- ヘルパーメソッド呼び出し-->
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <%= f.label :name %>
        <br>
        <%= f.text_field :name, class: 'form-control' %>
        <br>
        <%= f.submit '新規登録', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
    <div class="col-md-6" style="margin-top: 30px;">
      <table>
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <span>
                <%= genre.name %>
              </span>
              <br>
            </td>
            <td>
              <%= link_to '削除', admin_genre_path(genre), method: :delete, data: {comfirm: '本当に削除しますか？', class: 'btn-sm btn-danger'} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>