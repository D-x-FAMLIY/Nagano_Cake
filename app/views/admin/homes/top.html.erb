<div class="container">
  <div class="row">
    <div class="col-md-3" style="margin-top: 50px; text-align: center;" >
      <h2>注文履歴一覧</h2>
    </div>
    <div class="col-md-9" style="margin-top: 50px; text-align: center;">

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
          <% @quantity = 0 %>
          <tr>
            <!--注文の登録日時-->
            <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %></td>
            <!--注文の名前-->
            <td><%= order.customer.last_name + " " + order.customer.first_name %></td>
            <!--注文の注文商品の数量-->
            <td>
              <% order.product_orders.each do |product_order| %>
              <% @quantity += product_order.quantity %>
              <% end %>
             <%= @quantity %>
              </td>
            <!--注文のステータス-->
            <td><%= order.status_i18n %></td>

            <% end %>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="pagination" style="justify-content: center;">
        <!--ページネーション入れる-->
        <span><%= paginate @orders %></span>
      </div>
    </div>
  </div>
</div>
