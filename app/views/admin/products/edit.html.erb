<div class="container">
  <div class="row">

    <div class="col-md-3" style="margin-top: 50px; text-align: center;">
      <h2>商品編集</h2>
    </div>
    <div class="col-md-6" style="margin-top: 50px;"> 
      <%= form_with model:@product, url:admin_product_path(@product.id) do |f| %>
      <table class="table table-inverse">
        <tr>
        <th><%= f.label :商品画像 %></th>
        <th><%= f.file_field :image, accept: "image/*" %></th>
      </tr>
      <tr>
        <th><%= f.label :商品名 %></th>
        <th><%= f.text_field :name %></th>
      </tr>
      <tr>
        <th><%= f.label :商品説明 %></th>
        <th><%= f.text_area :introduction  %></th>
      </tr>
      <tr>
        <th><%= f.label :ジャンル %></th>
        <th>
      　<%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "--選択してください--")  %>
        </th>
      </tr>
      <tr>
        <th><%= f.label :税抜価格 %></th>
        <th><%= f.text_field :price_without_tax  %>円</th>
      </tr>
      <tr>
        <th><%= f.label :販売ステータス %></th>
        <th>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中" %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中" %>
        </th>
      </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12" style="text-align: center;">
        <%= f.submit "変更を保存", class: 'btn btn-success' %>
      
      <% end %>
    </div>
  </div>
</div>