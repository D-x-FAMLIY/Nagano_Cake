<div class="container">
  <div class="row">
    <div class="col-md-3" style="text-align: center; margin-top: 50px;">
      <h2>商品一覧</h2>
    </div>
    <div class="col-md-8" style="text-align: center; margin-top: 50px;">
      <table class='table'>
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= link_to product.name, admin_product_path(product), class: 'text-dark' %></td>
            <td><%= product.price_without_tax %></td>
            <td><%= product.genre.name %></td>
            <% if product.is_active == true %>
              <td>販売中</td>
            <% else %>
              <td>販売停止中</td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to new_admin_product_path do %>
        <i class="fa-solid fa-plus"></i>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="pagination" style="justify-content: center; margin-top: 30px;">
        <!--ページネーション入れる-->
        <p><%= paginate @products %></p>
      </div>
    </div>
  </div>
</div>
