

<h2>商品一覧</h2>

<table class='table'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>|
    <tr>
      <td><%= product.id %></td>
      <td><%= link_to product.name, admin_product_path(product) %></td>
      <td><%= product.price_without_tax %></td>
      <!--ジャンルにアソシエーション-->
      <td><%= product.genre.name %></td>
      <% if product.is_active == true %>
        <td>販売中</td>
      <% else %>
        <td>販売停止中</td>
      <% end %>


    </tr>
    <% end %>
  </tbody>
</table>


