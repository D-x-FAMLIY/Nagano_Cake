<h1>商品新規登録ページです。</h1>



  <h4>商品新規登録</h4>


<%= form_with model:@product, url: admin_products_path  do |f| %>
<table>
  <tr>
    <td><%= f.label :商品画像 %></td>
    <td><%= f.file_field :image, accept: "image/*" %></td>
  </tr>

  <tr>
    <td><%= f.label :商品名 %></td>
    <td><%= f.text_field :name, placeholder: "商品名" %></td>
  </tr>

  <tr>
    <td><%= f.label :商品説明 %></td>
    <td><%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %></td>
  </tr>

  <tr>
    <td><%= f.label :ジャンル %></td>
    <td>
      <!--ジャンルから持ってきてジャンルを選択する-->
      <%= f.collection_select(:genre, Genre.all, :id, :name, prompt: "--選択してください--")  %>


    </td>
  </tr>

  <tr>
    <td><%= f.label :税抜価格 %></td>
    <td>
      <%= f.text_field :price_without_tax, placeholder: "1000" %>
      円
    </td>
  </tr>

  <tr>
    <td><%= f.label :販売ステータス %></td>
    <td>
      <!--見た目大丈夫　内部のデータ変更-->
    <%= f.radio_button :is_active, "" %>
    <%= f.label :is_active, "販売中" %>

    <%= f.radio_button :is_active, "" %>
    <%= f.label :is_active, "販売停止中" %>

      
    </td>
  </tr>
</table>

<div>
  <%= f.submit "新規登録", class: 'btn btn-success'%>
</div>

<% end %>