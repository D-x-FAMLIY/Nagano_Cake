<!-- headerの部分テンプレート -->
<header>

  <!-- ナビゲーションバーのレイアウト -->
  <nav class ="navbar fixed-top navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
    <div class="container-fluid">
      <!-- 店名ロゴの表示-->
      <a class="navbar-brand" href="/" style="font-family: cursive;">
        <span>naganoCAKE</span>
      </a>
      <!-- ナビゲーション要素の追加 -->
      <button class="navbar-toggler" type="button" data-toggle="collapse"
        data-target="#navbarNavDropdown"
        aria-controls="navbarNavDrapdown"
        aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <!-- ユーザーがログインしている＆会員の場合に表示 -->
          <% if customer_signed_in? %>
            <li>
                <%= link_to public_show_path, class: 'nav-link text-dark' do %>
                  <i class="fa-regular fa-user"></i>
                  マイページ
                <% end %>
              </li>
            <li>
              <%= link_to public_products_path, class: 'nav-link text-dark' do %>
                <i class="fa-solid fa-utensils"></i>
                商品一覧
              <% end %>
            </li>
            <li>
              <%= link_to public_cart_items_path, class: 'nav-link text-dark' do %>
                <i class="fa-solid fa-cart-shopping"></i>
                カート
              <% end %>
            </li>
            <li>
              <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' do %>
                <i class="fa-solid fa-right-from-bracket"></i>
                ログアウト
              <% end %>
            </li>
          <!-- ユーザーがログインしているかつ管理者の場合に表示 -->
          <% elsif admin_signed_in? %>
            <li>
              <%= link_to admin_products_path, class: 'nav-link text-dark' do %>
                <i class="fa-solid fa-utensils"></i>
                商品一覧
              <% end %>
            </li>
            <li>
              <%= link_to admin_customers_path, class: 'nav-link text-dark' do %>
                <i class="fa-solid fa-users"></i>
                会員一覧
              <% end %>
            </li>
            <li>
              <%= link_to admin_root_path, class: 'nav-link text-dark' do %>
                <i class="fa-solid fa-book-open-reader"></i>
                注文履歴一覧
              <% end %>
            </li>
            <li>
              <%= link_to admin_genres_path, class: 'nav-link text-dark' do %>
              <i class="fa-solid fa-tags"></i>
                ジャンル一覧
              <% end %>
            </li>
            <li>
              <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' do %>
                <i class="fa-solid fa-right-from-bracket"></i>
                ログアウト
              <% end %>
            </li>
          <!-- 未ログインの場合に表示 -->
          <% else %>
            <li>
              <%= link_to about_path, class: 'nav-link text-dark' do %>
              <i class="fa-solid fa-shop" style="margin-right: 5px;"></i>
              About
              <% end %>
            </li>
            <li>
              <%= link_to public_products_path, class: 'nav-link text-dark' do %>
                <i class="fa-solid fa-book-open" style="margin-right: 5px;"></i>
                商品一覧
              <% end %>
            </li>
            <li>
              <%= link_to new_customer_registration_path, class: 'nav-link text-dark' do %>
                <i class="fa-solid fa-house-chimney" style="margin-right: 5px;"></i>
                新規登録
              <% end %>
            </li>
            <li>
              <%= link_to new_customer_session_path, class: 'nav-link text-dark' do %>
                <i class="fa-solid fa-right-to-bracket" style="margin-right: 5px;"></i>
                ログイン
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

</header>
<main>
  <div class="container" style="margin-top: 60px;"></div>
</main>