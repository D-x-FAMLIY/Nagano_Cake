<div class="container">
  <div class="row">

    <div class="col-md-3" style="text-align: center; margin-top: 50px;">
      <h3>配送先編集</h3>
    </div>

    <div class="col-md-6" style="text-align: center; margin-top: 50px;">
      <%= form_with model: @address, url: public_address_path, local: true, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :郵便番号（ハイフンなし）%>
            <br>
          <%= f.text_field :post_code %>
        </div>
        <div class="form-group">
          <%= f.label :住所 %>
          <br>
          <%= f.text_field :address %>
        </div>
        <div class="form-group">
          <%= f.label :宛名 %>
          <br>
          <%= f.text_field :name %>
          <br>
          <br>
          <%= f.submit '変更内容を保存', class: 'btn btn-sm btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>