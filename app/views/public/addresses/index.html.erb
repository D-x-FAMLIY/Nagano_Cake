<%= form_with model: @address, url: '/public/addresses', method: :post do |f| %>
<div class="container">
  <div class="row">
    
    <div class="col-md-3" style="text-align: center; margin-top: 50px;">
      <h3>配送先登録/一覧</h3>
    </div>

    <div class="col-md-5 offset-1" style="margin-top: 50px;">
      <table class="table">
        <div class="form-group col-xs-12">
          <tr>
            <th><%= f.label :郵便番号（ハイフンなし） %></th>
            <td><%= f.text_field :post_code %></td>
          </tr>
        </div>

        <div class="form-group col-xs-12">
          <tr>
            <th><%= f.label :住所 %></th>
            <td><%= f.text_area :address %></td>
          </tr>
        </div>

        <div class="form-group">
          <tr>
            <th><%= f.label :宛名 %></th>
            <td><%= f.text_field :name %></td>
          </tr>
        </div>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12" style="text-align: center;">
      <%= f.submit '新規登録', class: 'btn btn-success pull-right' %>
    </div>
  </div>
</div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-4" style="margin-top: 50px;" >
      <table border="1" style="border-collapse: collapse; margin-top: 30px;">
        <thead>
          <tr bgcolor="#eeeeee" style="height:50px;">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr style="height:50px;">
            <td style="padding-right:20px;"><%= address.post_code %></td>
            <td style="padding-right:20px;"><%= address.address %></td>
            <td style="padding-right:20px;"><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_public_address_path(address), class: "btn btn-sm btn-success" %>
              <%= link_to "削除する", public_address_path(address), method: :delete, class: "btn btn-sm btn-danger" %>
        <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>  
