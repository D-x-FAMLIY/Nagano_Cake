<h1>Public::Addresses#index</h1>
<h3>配送先登録/一覧</h3>
<%= form_with model: @address, url: '/public/addresses', method: :post do |f| %>
  <div class="form-group">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :post_code %>
  </div>

  <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>

  <div class="form-group">
    <%= f.label :宛名 %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.submit '新規登録', class: 'btn btn-success' %>
  </div>
<% end %>

<% @addresses.each do |address| %>
  <%= address.post_code %>
  <%= address.address %>
  <%= address.name %>
<% end %>
