<h3>配送先登録/一覧</h3>
<%= form_with model: @address, url: '/public/addresses', method: :post do |f| %>
  <div class="form-group">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :post_code %>
  </div>

  <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>

  <div class="form-group">
    <%= f.label :宛名 %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.submit '新規登録', class: 'btn btn-success' %>
  </div>
<% end %>

<table border="1" style="border-collapse: collapse">
  <thead>
    <tr bgcolor="#eeeeee">
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <% @addresses.each do |address| %>
        <tr>
        <td><%= address.post_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <!--%= link_to "編集する", edit_public_address_path(address) %-->
          <%= link_to "削除する", public_address_path(address), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
