

<%= link_to public_cart_items_destroy_all_path, method: :delete  do %>
  <i class="fa-solid fa-trash"></i>
<% end %>
<%= link_to root_path do %>
  買い物を続ける
<% end %>

<table>
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
  <tr>
    <% @cart_items.each do |cart_item| %>
    <td><%= image_tag cart_item.product.image, size:"50x50" %><%= cart_item.product.name %></td>
    <!--td><%= (cart_item.product.price_without_tax * 1.1).floor %></td-->
    <td><%= cart_item.product.with_tax_price %></td>
    <td><%= cart_item.quantity %></td>
    <!--td><%= (cart_item.product.price_without_tax * 1.1).floor * cart_item.quantity %> </td-->
    <td><%= cart_item.subtotal%></td>
    <%= form_with model: cart_item, url: public_cart_item_path(cart_item.id) , method: :patch do |f|%>
     <td><%= f.select :quantity, *[1..100] %></td>
     <td><%= f.submit "変更" %></td>
    <% end %>
     
    <tr>
      <td>
        <%= link_to '削除', public_cart_item_path(cart_item), method: :delete %>
      </td>
    </tr>
    <% end %>
    <%= @total %>
    
  </tr>
</table>


<%= link_to new_public_order_path do %>
  注文情報入力に進む
<% end %>