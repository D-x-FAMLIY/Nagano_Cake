<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6" style="text-align: center; margin-top: 50px;">

      <h3>会員情報編集</h3>
      <%= form_with model: @customer, url: public_customer_path, method: :patch do |f| %>

        <div class="field">
          <%= f.label :氏名 %>
          <br>
          <span>姓</span>
          <%= f.text_field :last_name %>
          <span>名</span>
          <%= f.text_field :first_name %>
        </div>

        <div class="field">
          <br>
          <span>セイ</span>
          <%= f.text_field :last_kana %>
          <span>メイ</span>
          <%= f.text_field :first_kana %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %>
          <br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :郵便番号（ハイフンなし） %>
          <br>
          <%= f.text_field :post_code %>
        </div>

        <div class="field">
          <%= f.label :住所 %>
          <br>
          <%= f.text_field :address %>
        </div>

        <div class="field">
          <%= f.label :電話番号（ハイフンなし） %>
          <br>
          <%= f.telephone_field :phone_number %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "編集内容を保存" %>
        </div>

      <% end %>

    </div>
  </div>
</div>