<div class="container">
  <div class="row">
    <div class="col-md-3" style="margin-top: 50px;">
      <h2>マイページ</h2>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-4" style="margin-top: 50px;">
      <table>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_kana %><%= @customer.first_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </th>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
  <!--履歴一覧のpathに置き換える。　今のところ仮のpath-->

    </div>
    <div class="col-md-1"></div>
    <div class="col-md-3" style="margin-top: 50px; text-align: center;">
      登録情報
      <br>
      <%= link_to "編集",edit_public_customer_path(current_customer),class: 'btn btn-success' %>
      <br>
      配送先
      <br>
      <%= link_to "一覧", public_addresses_path, class: 'btn btn-primary' %>
      <br>
      注文履歴
      <br>
      <%= link_to "一覧", public_orders_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>