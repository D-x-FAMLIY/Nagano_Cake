<div class="container">
  <div class="row">
    <div class="col-md-3" style="text-align: center; margin-top: 50px;">
      <h1>注文履歴一覧</h1>
    </div>
    <div class="col-md-9" style="margin-top: center;">
      <table class="table table-inverse">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>商品名</th>
            <th>合計金額</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime("%Y-%m-%d") %></td>
            <td><%= order.name %><br>〒<%= order.post_code %><%= order.address %></td>
            <td>
              <% order.product_orders.each do |product_order| %>
                <p><%= product_order.product.name %></p>
              <% end %>
            </td>
            <td><%= order.total %></td>
            <td><%= order.status_i18n %></td>
            <td></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
