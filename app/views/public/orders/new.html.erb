<div class="container">
  <div class="row">
    <div class="col-md-3" style="margin-top: 50px;">
      <h2>注文情報入力</h2>
        <ol class="nav" style="text-align-center">
          <li class="current" style="margin-right: 10px;">1.入力</li>
          <li style="margin-right:10px; margin-left: 20px;">2.確認</li>
          <li style="margin-left: 30px;">3.完了</li>
        </ol>
    </div>
    <div class="col-md-7 offset-1" style="margin-top: 50px;">
      <%= form_with model: @order, url: public_orders_confirm_path, method: :post do |f| %>
      <table class="table table-inverse">
          <tr>
            <th>
              支払方法
            </th>
            <th></th>
            <td>
              <%= f.radio_button :payment_method, :credit_card %>
              <%= f.label "クレジットカード" %>
            <br>
              <%= f.radio_button :payment_method, :transfer %>
              <%= f.label "銀行振込" %>
            </td>
          </tr>
      </table>
      <table class="table">
        <tbody>
          <tr>
            <th>お届け先</th>
            <td>
              <%= f.radio_button :order_address, '1' %>
              <%= f.label "ご自身の住所" %><br>
            </td>
            <td>
              〒<%= current_customer.post_code %><br>
              <%= current_customer.address %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td>
              <%= f.radio_button :order_address, '2' %>
              <%= f.label :order_address, "登録済み住所から選択" %>
            <td>
              <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses.all, :id, :address_display) %>
            </td>
            </td>
          </tr>
          <tr>
            <th></th>
            <td>
              <%= f.radio_button :order_address, '3' %>
              <%= f.label "新しいお届け先" %>
            </td>
            <td>
              <%= f.label "郵便番号(ハイフンなし)" %><br>
              <%= f.text_field :post_code %>
            </td>
            <td>
              <%= f.label "住所" %>
            </td>
          </tr>
        <br>
        <br>
        <br>
        <%= f.text_field :address %>
        <br>
        <%= f.label "宛名" %>
        <br>
        <%= f.text_field :name %>
        <br>
        <br>
        <%= f.submit "確認画面へ進む" %>
      <% end %>
        </tbody>
      </table>
    </div>
        <div class="col-md-3"></div>
  </div>
</div>