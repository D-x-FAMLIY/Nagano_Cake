<div class="container">
  <div class="row">
    <div class="col-md-3" style="margin-top: 50px;">
      <div class="genre" style="text-align: center">
          <b>ジャンル検索<i class="fa-solid fa-magnifying-glass"></i></b>
        <% @genres.each do |genre| %>
          <div>
            <%= link_to genre.name, public_products_path %>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="col-md-9" style="margin-top: 50px;">
      <h3>商品一覧</h3>
      <p>(全<% @products.count %>件)</p>
      <div class="d-flex flex-wrap justify-content-start">
      <% @products.each do |product| %>
        <div class="col-md-3" style="margin-top: 20px;">
          <%= link_to image_tag product.image ,size:"150x100"%>
          <!--商品をクリックして商品詳細画面への遷移ができてません-->
          <p><%= product.name %></p>
          <p>¥<%= (product.price_without_tax * 1.1).floor %></p>
        </div>
      <% end %>
      </div>

    </div>
  </div>
</div>

