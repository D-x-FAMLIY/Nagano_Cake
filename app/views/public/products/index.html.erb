<div class="container">
  <div class="row">
    <div class="col-md-3" style="margin-top: 50px; text-align: center;">
      <div class="genre">
        <h2>商品一覧</h2>
        <p>(全<%= @products.count %>件)</p>
      </div>
    </div>

    <div class="col-md-6" style="margin-top: 50px;">
      <div class="d-flex flex-wrap justify-content-start">
      <table class="table table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>商品名</th>
            <th>価格</th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @products.each do |product| %>
            <td>
              <%= link_to public_product_path(product.id) do %>
                <%= image_tag product.image ,size: "150x100"%>
              <% end %>
            </td>
            <td>
              <!--商品をクリックして商品詳細画面への遷移ができてません-->
              <p><%= product.name %></p>
            </td>
            <td>
              <p>¥<%= (product.price_without_tax * 1.1).floor %></p>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
    <div class="col-md-3" style="margin-top: 50px; text-align: center;">
        <b>ジャンル検索<i class="fa-solid fa-magnifying-glass"></i></b>
        <% @genres.each do |genre| %>
          <div>
            <%= link_to genre.name, public_products_path %>
          </div>
        <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="pagination" style="justify-content: center; margin-top: 30px;">
        <!--ページネーション入れる-->
        <p><%= paginate @products %></p>
      </div>
    </div>
  </div>
</div>

