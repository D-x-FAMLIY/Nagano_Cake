<div class="container">
  <div class="row">
    <div class="col-md-3">
      <table>
        <tr>
          <th>ジャンル検索</th>
        </tr>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= link_to genre.name, public_products_path %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col-md-9">
      <table>
        <tr>
          <th>
            <h3>商品一覧</h3>
            <p>(全<% @products.count %>件)</p>
          </th>
        </tr>
        <% @products.each do |product| %>
          <tr>
            <th><%= image_tag product.image, size:"50x50" %></th>
          </tr>
          <tr>
            <th><%= link_to product.name, public_product_path(product.id) %></th>
          </tr>
          <tr>
            <th><%= product.price_without_tax %></th>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

