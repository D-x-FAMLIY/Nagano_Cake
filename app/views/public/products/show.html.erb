<div class="container">
  <div class="row">
    <div class="col-md-3" style="text-align: center; margin-top: 50px;" >
      <table>
        <tr>
          <th>ジャンル検索</th>
        </tr>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col-md-9" style="margin-top: 50px;">

      <%= image_tag @product.image, size:"350x300" %>
      <h2><%= @product.name %></h2>
      <p><%= @product.introduction %></p>
      <strong><%= (@product.price_without_tax * 1.1).floor %></strong>

      <%= form_with model: @cart_item, url: public_cart_items_path, local: true, method: :post do |f| %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>
      <%= f.hidden_field :product_id, :value => @product.id %>


      <%= f.select :quantity, *[1..4] %>
      <%= f.submit "カートに入れる" %>
      <% end %>

    </div>
  </div>
</div>