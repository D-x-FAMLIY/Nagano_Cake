<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      
      <h3>新規会員登録</h3>
      
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :氏名 %>
          <br>
          <span>姓</span>
          <%= f.text_field :last_name %>
          <span>名</span>
          <%= f.text_field :first_name %>
        </div>
      
        <div class="field">
          <%= f.label :フリガナ %>
          <br>
          <span>セイ</span>
          <%= f.text_field :last_kana %>
          <span>メイ</span>
          <%= f.text_field :first_kana %>
        </div>
      
        <div class="field">
          <%= f.label :メールアドレス %>
          <br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="field">
          <%= f.label :郵便番号（ハイフンなし） %>
          <br>
          <%= f.text_field :post_code %>
        </div>
      
        <div class="field">
          <%= f.label :住所 %>
          <br>
          <%= f.text_field :address %>
        </div>
      
        <div class="field">
          <%= f.label :電話番号（ハイフンなし） %>
          <br>
          <%= f.telephone_field :phone_number %>
        </div>
      
        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          <br>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      
        <div class="field">
          <%= f.label :パスワード（確認用） %>
          <br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <br>
      
        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>
      
      
      <h3>既に登録済みの方</h3>
      <%= render "public/shared/links" %>

    </div>
  </div>
</div>