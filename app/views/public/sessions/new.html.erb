<div class="container">
  <div class="row">
    <div class="col-md-3" style="text-align: center; margin-top: 50px;">
      <h2>ログイン</h2>
      <p>会員の方はこちらからログイン</p>
    </div>
    <div class="col-md-6" style="margin-top: 50px; text-align: center;">
      <%= form_with model: @customer, url: new_customer_session_path do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %>
          <br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"40" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <br>
          <%= f.password_field :password, autocomplete: "current-password", :size=>"40" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field" style="margin-top: 10px;">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions" style="margin-bottom: 10px;">
          <%= f.submit "ログイン" %>
        </div>
       <% end %>
      
      <br>
      <h4>会員登録がお済みでない方</h4>
        <%= render "public/shared/links" %>

    </div>
  </div>
</div>